# bash completion for terminator                           -*- shell-script -*-

_terminator()
{
    local cur prev words cword
    _init_completion || return

    COMPREPLY=($(compgen -W "$($1 --help | tr ',' '\n' |
        command sed -n -e 's/ *\(--\?[a-zA-Z\-]\+=\?\).*/\1/p')"\
    -- "$cur"))
} &&
    complete -F _terminator terminator

# ex: filetype=sh
